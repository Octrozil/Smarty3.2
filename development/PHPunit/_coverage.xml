<phpunit stopOnFailure="false">

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true" processUncoveredFilesFromWhitelist="true">
            <directoryx suffix=".php">../../lib</directoryx>
            <directoryx suffix=".php">../../demo</directoryx>
            <exclude>
                <file>../../demo/index.php</file>
                <file>../../demo/info.php</file>
                <directory suffix=".php">./</directory>
                <directory suffix=".php">../../demo/cache</directory>
                <directory suffix=".php">../../demo/templates_c</directory>
                <directory suffix=".php">../../development/PHPunit</directory>
                <directory suffix=".php">c:/wamp/bin</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
